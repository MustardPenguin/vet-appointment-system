            <dependency>
                <groupId>com.vet.appointment.system</groupId>
                <artifactId>kafka-consumer</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.vet.appointment.system</groupId>
                <artifactId>kafka-model</artifactId>
